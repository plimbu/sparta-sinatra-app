<h2>Peters Basic Form</h2>

<!-- make a post request to post "/" which is the create route  -->
<!-- below code dynamically gets post depending on id -->
<!-- if id is empty it will go to root otherwise it will get the post depending on id -->
<form class ="" action="/<%= @pokemon.id %>" method = "POST">
  <div class="">
    <label>Pokemon Name</label>
    <input type="text" value ="<%= @pokemon.pokemon %>" name="pokemon" placeholder="enter a Pokemon name">
  </div>

  <div class="">
    <label for="">Pokemon Description</label>
    <textarea name="body" placeholder ="Enter description of your pokemon" ><%= @pokemon.body %></textarea>
  </div>

  <div class="">
    <input type="submit" name="" value="save post">
  </div>

<!-- if post id is not empty we want to make a  put request otherwise we do post request -->
  <% if(@pokemon.id != "") %>
    <input type="hidden" name="_method" value="PUT">
  <%end%>

</form>

<p>Click submit to make a new pokemon</p>
